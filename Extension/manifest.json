{
    "manifest_version": 3,
    "name": "Capture The Screen",
    "version": "1.0",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["http://localhost:3000/*, https://localhost:5000/*"]
}
